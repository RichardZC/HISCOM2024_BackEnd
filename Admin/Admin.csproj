    <PackageReference Include="Serilog.AspNetCore" Version="4.1.0" />
    <PackageReference Include="Serilog.Enrichers.Environment" Version="2.2.0" />
    <PackageReference Include="Serilog.Extensions.Logging" Version="3.0.1" />
    <PackageReference Include="Serilog.Sinks.Console" Version="4.0.0" />
    <PackageReference Include="Serilog.Sinks.Elasticsearch" Version="8.4.1" />
    <PackageReference Include="Serilog.Sinks.File" Version="5.0.0" />
    <PackageReference Include="System.CodeDom" Version="5.0.0" />
    <PackageReference Include="System.Drawing.Common" Version="5.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Domain\Domain.csproj" />
    <ProjectReference Include="..\Utilities\Utilities.csproj" />
  </ItemGroup>

  <ItemGroup>
    <TemplateFiles Include="$(ProjectDir)\Templates\*.hbs" />
    <TemplateImages Include="$(ProjectDir)\Templates\*.jpg" />
  </ItemGroup>
  
  <Target Name="CopyTemplates" AfterTargets="AfterBuild">
    <Copy SourceFiles="@(TemplateFiles)" DestinationFolder="$(OutDir)\Templates" />
    <Copy SourceFiles="@(TemplateImages)" DestinationFolder="$(OutDir)\Templates" />
  </Target>
  
  <ItemGroup>
    <None Remove="Templates\ControllerGenerator\**" />
    <None Remove="wwwroot\shift-work\**" />
    <Content Remove="Templates\ControllerGenerator\**" />
    <Content Remove="wwwroot\shift-work\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Templates\ControllerGenerator\**" />
    <Compile Remove="wwwroot\shift-work\**" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Remove="Templates\ControllerGenerator\**" />
    <EmbeddedResource Remove="wwwroot\shift-work\**" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="wwwroot\Reportes\rptCita.rdlc" />
  </ItemGroup>

  <!--<ItemGroup>
    <TemplateFiles Remove="Templates\Payroll.hbs" />
  </ItemGroup>-->

  <ItemGroup>
    <_ContentIncludedByDefault Remove="Templates\ControllerGenerator\ApiControllerWithActions.cshtml" />
    <_ContentIncludedByDefault Remove="Templates\ControllerGenerator\ApiControllerWithContext.cshtml" />
    <_ContentIncludedByDefault Remove="Templates\ControllerGenerator\ApiEmptyController.cshtml" />
    <_ContentIncludedByDefault Remove="Templates\ControllerGenerator\ControllerWithActions.cshtml" />
    <_ContentIncludedByDefault Remove="Templates\ControllerGenerator\EmptyController.cshtml" />
    <_ContentIncludedByDefault Remove="Templates\ControllerGenerator\MvcControllerWithContext.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="wwwroot\Reportes\rptCita.rdlc" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Templates\shiftWork.hbs">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
	<None Update="Templates\payroll.hbs">
	  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	</None>
  </ItemGroup>

  <ProjectExtensions><VisualStudio><UserProperties appsettings_1json__JsonSchema="" /></VisualStudio></ProjectExtensions>

</Project>
